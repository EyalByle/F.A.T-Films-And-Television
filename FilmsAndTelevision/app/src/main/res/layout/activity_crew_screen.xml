<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PersonalsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CrewScreen">
    <Button
        android:id="@+id/ToggleCrew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="toggleLists"
        android:text="Directors"
        android:textSize="@dimen/font_large"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/DirectorsListView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:divider="@android:color/background_dark"
        android:dividerHeight="1dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/ToggleCrew"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ListView
        android:id="@+id/ProducersListView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:divider="@android:color/background_dark"
        android:dividerHeight="1dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/ToggleCrew"
        app:layout_constraintBottom_toBottomOf="parent"  />

    <ListView
        android:id="@+id/WritersListView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:divider="@android:color/background_dark"
        android:dividerHeight="1dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/ToggleCrew"
        app:layout_constraintBottom_toBottomOf="parent"  />

    <ListView
        android:id="@+id/CastListView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:divider="@android:color/background_dark"
        android:dividerHeight="1dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/ToggleCrew"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>