<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LayoutContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    tools:context=".activities.StreamScreen" >

    <SurfaceView
        android:id="@+id/VideoSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.user.FilmsAndTelevision.SubtitlesView
        android:id="@+id/SubtitlesView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_small"
        android:layout_above="@id/CustomController"
        android:textAlignment="center"
        android:textDirection="ltr"
        android:textSize="@dimen/font_large"
        android:textColor="@color/White"
        android:text=""/>

    <com.example.user.FilmsAndTelevision.CustomMediaController
        android:id="@+id/CustomController"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

    </com.example.user.FilmsAndTelevision.CustomMediaController>


</RelativeLayout>